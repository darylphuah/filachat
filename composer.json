{
    "name": "darylphuah/filachat",
    "description": "FilaChat is a plugin for integrating real-time customer support chat into your application. Provides tools for both customer and agent chat interfaces, with features for managing and maintaining chat conversations.",
    "keywords": [
        "jaocero",
        "darylphuah",
        "laravel",
        "filachat"
    ],
    "homepage": "https://github.com/darylphuah/filachat",
    "support": {
        "issues": "https://github.com/darylphuah/filachat/issues",
        "source": "https://github.com/darylphuah/filachat"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Daryl Phuah",
            "email": "daryl@simpleet.com",
            "role": "Developer"
        },
        {
            "name": "Jay-Are Ocero",
            "email": "199ocero@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "filament/filament": "^3.0",
        "livewire/livewire": "^3.5",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.1",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Darylphuah\\FilaChat\\": "src/",
            "Darylphuah\\FilaChat\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Darylphuah\\FilaChat\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Darylphuah\\FilaChat\\FilaChatServiceProvider"
            ],
            "aliases": {
                "FilaChat": "Darylphuah\\FilaChat\\Facades\\FilaChat"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
